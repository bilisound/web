{
    "private": true,
    "name": "@bilisound2/client-desktop",
    "productName": "Bilisound",
    "version": "1.0.0",
    "description": "Bilisound 桌面客户端",
    "main": "./out/main/index.js",
    "author": "tcdw <tcdw2011@gmail.com>",
    "homepage": "http://bilisound.moe",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "pnpm run typecheck && electron-vite build",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "pnpm run build && electron-builder --win --config",
        "build:mac": "electron-vite build && electron-builder --mac --config",
        "build:linux": "electron-vite build && electron-builder --linux --config",
        "clean": "rimraf ./dist ./out"
    },
    "dependencies": {
        "@bilisound2/theme": "workspace:*",
        "@bilisound2/utils": "workspace:*",
        "@electron-toolkit/preload": "^2.0.0",
        "@electron-toolkit/utils": "^1.0.2",
        "@fontsource/roboto": "^5.0.3",
        "@nikolovlazar/chakra-ui-prose": "^1.2.1",
        "@open-rpc/client-js": "^1.8.1",
        "@types/detect-port": "^1.3.3",
        "ajv": "^8.12.0",
        "caseless": "^0.12.0",
        "detect-port": "^1.5.1",
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "eventemitter3": "^5.0.1",
        "fs-extra": "^11.1.1",
        "konami-code": "^0.3.0",
        "react-markdown": "^8.0.7",
        "react-router-dom": "^6.14.0",
        "sanitize-filename": "^1.6.3",
        "tiny-emitter": "^2.1.0",
        "tiny-typed-emitter": "^2.1.0"
    },
    "devDependencies": {
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron/notarize": "^1.2.4",
        "@types/caseless": "^0.12.2",
        "@vitejs/plugin-react": "^4.0.1",
        "electron": "^24.6.0",
        "electron-builder": "^23.6.0",
        "electron-vite": "^1.0.24",
        "eslint-config-bilisound2": "workspace:*",
        "front-matter": "^4.0.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.8",
        "vite": "^4.3.9",
        "vite-plugin-node-polyfills": "^0.9.0",
        "typescript": "~5.1.5"
    }
}
